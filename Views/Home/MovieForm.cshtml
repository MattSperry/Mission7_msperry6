@{
    ViewData["Title"] = "Movie Entry";
}

@model Mission6_msperry6.Models.Movie

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryId">Enter Category</label>
        <br />
        <select asp-for="CategoryId" required>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>          
        <br />
        <label asp-for="Title">Title</label>
        <br />
        <input maxlength="50" type="text" name="title" asp-for="Title" required/>
        <br />
        <label asp-for="Year">Year</label>
        <br />
        <input type="number" name="year" asp-for="Year" required/>
        <br />
        <label asp-for="Director">Director</label>
        <br />
        <input maxlength="25" type="text" name="director" asp-for="Director" required/>
        <br />
        <label asp-for="Rating">Enter Rating</label>
        <br />
        <select name="rating" asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label asp-for="Edited">Check box if edited</label>
        <br />
        <select name="edited" asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent to</label>
        <br />
        <input type="text" name="lentTo" asp-for="LentTo"/>
        <br />
        <label asp-for="Notes">Notes</label>
        <br />
        <input maxlength="25" type="text" name="notes" asp-for="Notes"/>
        <br /><br />
        <button type="submit">Submit Movie</button>
    </form>
</div>
